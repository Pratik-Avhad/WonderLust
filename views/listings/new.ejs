<% layout('/layouts/boilerplate') -%>

  <body>

    <div class="row col-8 offset-2">
      <h2 class="mt-3">Create a new Listing</h2>
      <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3 col">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" class="form-control" placeholder="Title" type="text" required />
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please enter a valid title.
          </div>
        </div>

        <div class="mb-3 col">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" type="text" class="form-control" required></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please enter a valid description.
          </div>
        </div>

        <div class="mb-3 col">
          <label for="image" class="form-label">Upload Image</label>
          <input name="listing[image]" class="form-control" type="file" />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" class="form-control" placeholder="2000" type="number" required />
            <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
              Please enter a valid price.
            </div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" class="form-control" placeholder="India" type="text" required />
            <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
              Please enter a valid country.
            </div>
          </div>
        </div>

        <div class="mb-3 col">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" class="form-control" placeholder="Kalyan, Maharashtra" type="text" required />
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please enter a valid location.
          </div>
        </div>

        <button class="btn btn-dark add-btn mb-3">Add</button>
      </form>
    </div>
  </body>